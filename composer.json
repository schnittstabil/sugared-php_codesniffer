{
    "name": "schnittstabil/sugared-php_codesniffer",
    "type": "library",
    "description": "PHP_CodeSniffer sweetened with ease",
    "license": "MIT",
    "keywords": ["sugared", "preconfigured", "php_codesniffer", "phpcs", "standards"],
    "authors": [
        {
            "name": "Michael Mayer",
            "email": "michael@schnittstabil.de"
        }
    ],
    "autoload": {
        "psr-4": { "Schnittstabil\\Sugared\\PHP\\CodeSniffer\\": "src" }
    },
    "autoload-dev": {
        "psr-4": { "Schnittstabil\\Sugared\\PHP\\CodeSniffer\\": "tests" }
    },
    "require": {
        "php": ">=5.6.0",
        "schnittstabil/composer-extra": "^0.5",
        "schnittstabil/finder-by-config": "^0.1",
        "squizlabs/php_codesniffer": "^2.6"
    },
    "require-dev": {
        "codeclimate/php-test-reporter": "^0.3.0",
        "satooshi/php-coveralls": "^1.0",
        "schnittstabil/sugared-phpunit": "^0.5"
    },
    "extra": {
        "schnittstabil\/sugared-php_codesniffer test namespace": {
            "default_standard": ["PSR1", "PSR2"],
            "files": {
                "in": "tests/fixtures"
            }
        }
    },
    "bin": [
        "sugared-phpcbf",
        "sugared-phpcs"
    ],
    "scripts": {
        "clean": "rm -rf build/",
        "doc": [
            "sugared-sami",
            "phpmetrics --report-html build/phpmetrics/index.html src/"
        ],
        "lint": [
            "phpcs -s --standard=PSR1,PSR2 src/ tests/",
            "sugared-phpmd",
            "php-cs-fixer fix --dry-run --diff src",
            "php-cs-fixer fix --dry-run --diff tests"
        ],
        "test": [
            "sugared-phpunit",
            "composer lint"
        ]
    }
}
